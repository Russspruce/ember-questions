{{#if addNewAnswer}}
<h2>Reply:</h2>
<hr>

<form>
  <div class="form-group">
    <label for="name">Name:</label>
    {{input value=name id="name"}}
  </div>

  <div class="form-group">
    <label for="reply">Comment:</label>
    {{input value=reply id="reply"}}
  </div>

  <button {{action 'saveAnswer'}}>Submit</button>
</form>
{{else}}
  <button {{action 'answerForm'}}>Comment</button>
  {{/if}}
