{{#if addNewQuestion}}
<h3>What do you want to ask?</h3>
  <div class="border">
    <form>
      <div class="form-group">
        <label for="asker">Name:</label>
        {{input value=asker id="asker"}}
      </div>

      <div class="form-group">
        <label for="question">Question:</label>
        {{input value=question id="question"}}
      </div>

      <div class="form-group">
        <label for="info">Info:</label>
        {{input value=info id="info"}}
      </div>

      <button {{action 'save1'}}>Save</button>
    </form>
  </div>
 {{else}}
  <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
